{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "types": ["vite/client"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}